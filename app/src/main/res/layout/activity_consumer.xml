<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Consumer">

    <!-- Search Bar -->
    <EditText
        android:id="@+id/searchBar"
        android:layout_width="210dp"
        android:layout_height="59dp"
        android:layout_marginTop="8dp"
        android:hint="Search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Search Button with Icon -->


    <!-- Filter Button with Icon -->

    <ImageButton
        android:id="@+id/searchButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/search"
        app:layout_constraintEnd_toStartOf="@id/filterLayout"
        app:layout_constraintTop_toTopOf="@id/searchBar" />

    <LinearLayout
        android:id="@+id/filterLayout"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toEndOf="@id/searchBar"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/filterButton"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:drawableLeft="@drawable/filter"
            android:onClick="showFilterOptions" />
        <!-- Remove the android:text attribute to remove the text -->
        <!-- android:text="Filter" -->

        <ImageButton
            android:id="@+id/cartButton"
            android:layout_width="61dp"
            android:layout_height="59dp"
            android:src="@drawable/cart" />

    </LinearLayout>
<!--    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="384dp"
        android:layout_height="616dp"
        android:id="@+id/productRecyclerView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />-->


    <ListView
        android:id="@+id/productListView"
        android:layout_width="384dp"
        android:layout_height="616dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/mapButton"
        android:layout_width="355dp"
        android:layout_height="33dp"

        android:src="@drawable/places_powered_by_google_light"
        android:text="Map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="75dp" />

    <!-- Cart Icon/Button -->

    <!-- Product Display Section -->

</androidx.constraintlayout.widget.ConstraintLayout>
