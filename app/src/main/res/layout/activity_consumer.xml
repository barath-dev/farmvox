<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Consumer">

    <!-- Search Bar -->

    <!-- Search Button with Icon -->


    <!-- Filter Button with Icon -->

    <EditText
        android:id="@+id/searchBar"
        android:layout_width="210dp"
        android:layout_height="59dp"
        android:layout_marginTop="28dp"
        android:hint="Search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/searchButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/search"
        app:layout_constraintBottom_toTopOf="@+id/mapButton"
        app:layout_constraintStart_toEndOf="@+id/searchBar"
        app:layout_constraintTop_toTopOf="@id/searchBar" />

    <ListView
        android:id="@+id/productListView"
        android:layout_width="357dp"
        android:layout_height="548dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.777" />

    <Button
        android:id="@+id/mapButton"
        android:layout_width="353dp"
        android:layout_height="52dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/places_powered_by_google_light"
        android:text="Check Farmers in map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.275"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchButton" />

    <Button
        android:id="@+id/filterButton"
        android:layout_width="48dp"
        android:layout_height="54dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="4dp"
        android:drawableLeft="@drawable/filter"
        android:onClick="showFilterOptions"
        app:layout_constraintBottom_toTopOf="@+id/mapButton"
        app:layout_constraintEnd_toStartOf="@+id/cartButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/cartButton"
        android:layout_width="61dp"
        android:layout_height="59dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="1dp"
        android:src="@drawable/cart"
        app:layout_constraintBottom_toTopOf="@+id/mapButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Cart Icon/Button -->

    <!-- Product Display Section -->

</androidx.constraintlayout.widget.ConstraintLayout>
