<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cons"
    tools:context=".Consumer">

    <EditText
        android:id="@+id/searchBar"
        android:layout_width="210dp"
        android:layout_height="59dp"
        android:layout_marginTop="28dp"
        android:hint="Search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="353dp"
        android:layout_height="39dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="12dp"
        android:text="Search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchBar" />

    <ListView
        android:id="@+id/productListView"
        android:layout_width="327dp"
        android:layout_height="416dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapButton" />

    <Button
        android:id="@+id/mapButton"
        android:layout_width="353dp"
        android:layout_height="52dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/places_powered_by_google_light"
        android:text="Check Farmers in map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.258"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchButton" />

    <Button
        android:id="@+id/checkOrdersButton"
        android:layout_width="353dp"
        android:layout_height="52dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="31dp"
        android:src="@drawable/places_powered_by_google_light"
        android:text="Check Orders"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productListView"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/filterButton"
        android:layout_width="54dp"
        android:layout_height="47dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        android:drawableLeft="@drawable/filter"
        app:layout_constraintStart_toEndOf="@+id/searchBar"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/cartButton"
        android:layout_width="52dp"
        android:layout_height="47dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/cart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/filterButton"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/farmersProfile"
        android:layout_width="355dp"
        android:layout_height="22dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="1dp"
        android:text="Farmers Profile"
        android:textAlignment="center"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
