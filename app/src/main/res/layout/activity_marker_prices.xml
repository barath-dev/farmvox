<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MarkerPrices"
    android:background="@drawable/admin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <Spinner
            android:id="@+id/marketItemsSpinner"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Select Crop"
            android:textColorHint="#757575" />

        <!-- Quantity Input Field -->
        <EditText
            android:id="@+id/minPrice"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Minumum Price per Unit"
            android:inputType="number"
            android:textColorHint="#757575" />


        <!-- TextView to Display Price -->


        <!-- Checkbox for Agreement -->
        <EditText
            android:id="@+id/maxPrice"
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Maximum Price per Unit"
            android:inputType="number"
            android:textColorHint="#757575" />

        <!-- Submit Button -->

        <Button
            android:id="@+id/updateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Update"
            android:textSize="20sp" />

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
